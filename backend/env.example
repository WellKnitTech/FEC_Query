# OpenFEC API Configuration
FEC_API_KEY=your_api_key_here
FEC_API_BASE_URL=https://api.open.fec.gov/v1

# Database Configuration
DATABASE_URL=sqlite:///./fec_data.db

# Application Configuration
DEBUG=True
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Performance Configuration
# Number of uvicorn worker processes (default: 1 for development, 2+ for production)
# Note: With SQLite, multiple workers may cause database lock contention during bulk imports
# Recommended: 1-2 for development, 2-4 for production (depending on CPU cores)
UVICORN_WORKERS=1

# Number of threads in the thread pool for CPU-bound pandas operations (default: 4)
# This prevents blocking the async event loop during data processing
# Recommended: 2-4 for development, 4-8 for production
THREAD_POOL_WORKERS=4

# Cache Configuration
CACHE_TTL_HOURS=24

